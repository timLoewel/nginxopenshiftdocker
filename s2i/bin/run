#!/bin/bash -e
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# prepare the config from environment variables
sed -i "s/%PROJECT_NAME%/$PROJECT_NAME/" /etc/nginx/nginx.conf

# We will turn off daemonizing for the nginx process so that the container
# doesn't exit after the process runs.
exec /usr/sbin/nginx -g "daemon off;"
